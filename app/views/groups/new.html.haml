.chat-group-form
  %h1 新規チャットグループ
  = form_for @group do |f|
    - if flash[:alert]
      .chat-group-form__errors
        %h2 1 error prohibited this chat_group from being saved:
        %ul
          %li= flash[:alert]
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name, "グループ名", class: 'chat-group-form__label', for: 'chat_group_name'
      .chat-group-form__field--right
        = f.text_field :name, class: 'chat-group-form__input', id: 'chat_group_name', placeholder: "グループ名を入力してください", :name => "chat_group[name]"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :users, "チャットメンバーを追加", class: 'chat-group-form__label'
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        = collection_check_boxes(:chat_group, :user_ids, User.all, :id, :name) do |b|
          = b.label { b.check_box + b.text }
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label チャットメンバー
      .chat-group-form__field--right
        #chat-group-users
          #chat-group-user-22.chat-group-user.clearfix
            = current_user.name

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit class:'chat-group-form__action-btn', value:"Submit"
