.chat-group-form
  %h1 新規チャットグループ
  = form_for @group do |f|
    - if flash[:alert]
      .chat-group-form__errors
        %h2= flash[:alert_length]
        %ul
          - flash[:alert].each do |alert|
            %li= alert
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name, "グループ名", class: 'chat-group-form__label', for: 'chat_group_name'
      .chat-group-form__field--right
        = f.text_field :name, class: 'chat-group-form__input', id: 'chat_group_name', placeholder: "グループ名を入力してください", name: "chat_group[name]"
    .chat-group-form__field.clearfix#user_field
      .chat-group-form__field--left
        = f.label :user, "チャットメンバーを追加", class: 'chat-group-form__label'
      .chat-group-form__field--right
        = f.text_field :user, class: 'chat-group-form__input', id: 'chat_user_name', placeholder: "追加したいユーザー名を入力してください", name: "chat_group[user_name]"
      #chat-user-result

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label チャットメンバー
      .chat-group-form__field--right
        #chat-group-users
          #chat-group-user.chat-group-user.clearfix
            = current_user.name

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit class:'chat-group-form__action-btn', value:"Submit"
