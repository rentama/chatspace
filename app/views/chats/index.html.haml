- if flash[:notice].present?
  .layout-notice
    =flash[:notice]

- if flash[:alert].present?
  .error_message
    =flash[:alert]

.chat
  .chat__side
    .chat__side--user
      %h5 Hello!
      = link_to edit_user_registration_path, class: "edit-user-registration" do
        %i.fa.fa-cog
      %a.create-a-chat-group
        %i.fa.fa-pencil-square-o
    %ul.chat__side--groups
      %li.chat__side--group
        %a.chat--group__link
          %p.chat--group__name name1
          %p.chat--group__message message1
      %li.chat__side--group
        %a.chat--group__link
          %p.chat--group__name name2
          %p.chat--group__message message2
  .chat__main
    .chat__main--header
      .chat__main--header__left
        %h2 sample
        %p Members: hoge huga
      .chat__main--header__right
        %a Edit
    .chat__main--body
      %ul
        %li
          .chat__main--body--block
            .chat__main--body--block--name ren
            .chat__main--body--block--date 16/10/31 11:45:32
          %p.chat__main--body--message こんにちは
        %li
          .chat__main--body--block
            .chat__main--body--block--name ken
            .chat__main--body--block--date 16/11/1 09:11:11
          %p.chat__main--body--message おはようございます
    .chat__main--footer
      = form_for @message,:url => {:action => :create} do |f|
        .chat__main--footer--block__left
          = f.text_area :body, id:"chat__main--footer--text-js", placeholder: "type a message"
        .chat__main--footer--image
          %i.fa.fa-image
        = f.submit class:"chat__main--footer--block__right", value: "Submit"
